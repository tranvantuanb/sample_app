<% provide :title, @user.name %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
    </section>
  </aside>
</div>

<table style="width:100%">
  <tr>
    <th>Name</th>
    <th>Email</th>
    <th>Created at</th>
    <th>Updated at</th>
    <th>Time now</th>
  </tr>
  <tr>
    <td><%= @user.name %></td>
    <td><%= @user.email %></td>
    <td><%= @user.created_at %></td>
    <td><%= @user.updated_at %></td>
    <td><%= Time.now %></td>
  </tr>
</table>
